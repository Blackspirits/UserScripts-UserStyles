{
  "env": {
    "browser": true,
    "es2021": true,
    "greasemonkey": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", 2],
    "quotes": ["warn", "single"],
    "semi": ["warn", "always"],
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "warn",
    "no-var": "error"
  },
  "globals": {
    "GM": "readonly",
    "GM_info": "readonly",
    "GM_getValue": "readonly",
    "GM_setValue": "readonly",
    "GM_deleteValue": "readonly",
    "GM_listValues": "readonly",
    "GM_xmlhttpRequest": "readonly",
    "GM_addStyle": "readonly",
    "GM_registerMenuCommand": "readonly",
    "GM_notification": "readonly",
    "unsafeWindow": "readonly"
  }
}
